<div class = "edit-task">
  <p>Edit Task</p>
  <div class = "row">
    <div class = "col-xs-offset-3 col-xs-6">
      <%= form_for(@task) do |f| %>
        <div class = "form-group">
          <%= f.label :todo, "タスク" %>
          <%= f.text_field :todo, class: "form-control" %>
        </div>
        <%= f.submit "登録", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
<div class = "edit text-center">&lt<%= link_to "Back to Tasks", tasks_path %></div>